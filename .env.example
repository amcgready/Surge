# Surge Configuration
# Copy this file to .env and customize for your setup

# ===========================================
# GENERAL CONFIGURATION
# ===========================================

# Timezone for all containers
TZ=

# User and Group IDs (run 'id' command to get yours)
PUID=
PGID=

# ===========================================
# MEDIA SERVER CONFIGURATION
# ===========================================

# Media server selection (plex, jellyfin, emby)
MEDIA_SERVER=

# ===========================================
# STORAGE PATHS
# ===========================================

# Storage path for all services
STORAGE_PATH=

# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Homepage Dashboard
HOMEPAGE_PORT=3000

# Media Server Ports
PLEX_PORT=32400
EMBY_PORT=8096
JELLYFIN_PORT=8096

# Automation Tools
RADARR_PORT=7878
SONARR_PORT=8989
BAZARR_PORT=6767
PROWLARR_PORT=9696

# Media Management Tools
CINESYNC_PORT=8082
CINESYNC_WEB_DAV_PORT=5173

# ===========================================
# MEDIA SERVER SELECTION
# ===========================================

# Choose your media server: plex, emby, or jellyfin
MEDIA_SERVER=plex

# ===========================================
# DOWNLOAD CLIENT CONFIGURATION
# ===========================================

# NZBGet Configuration
NZBGET_USER=admin
NZBGET_PASS=tegbzn6789

# Real-Debrid Configuration (if using RDT-Client)
RD_API_TOKEN=
RD_USERNAME=

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# TMDB API Key (for metadata)
TMDB_API_KEY=

# Trakt API (for list management)
TRAKT_CLIENT_ID=
TRAKT_CLIENT_SECRET=

# Debrid Service API Keys
RD_API_TOKEN=
AD_API_TOKEN=
PREMIUMIZE_API_TOKEN=
TORBOX_API_TOKEN=

# Poster Enhancement APIs
FANART_API_KEY=
TVDB_API_KEY=

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Docker network name
NETWORK_NAME=surge-network

# Restart policy for containers
RESTART_POLICY=unless-stopped

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable/disable specific services (true/false)
ENABLE_RADARR=true
ENABLE_SONARR=true
ENABLE_OVERSEERR=true
ENABLE_BAZARR=true
ENABLE_PROWLARR=true
ENABLE_NZBGET=true
ENABLE_RDT_CLIENT=false
ENABLE_CLI_DEBRID=false
CLI_DEBRID_PORT=5000
ENABLE_DECYPHARR=false
ENABLE_RDT_CLIENT=false
ENABLE_KOMETA=true
ENABLE_POSTERIZARR=true
ENABLE_TAUTULLI=true
ENABLE_HOMEPAGE=true
ENABLE_WATCHTOWER=true
ENABLE_SCHEDULER=true
