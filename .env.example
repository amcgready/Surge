# Surge Configuration
# Copy this file to .env and customize for your setup

# ===========================================
# GENERAL CONFIGURATION
# ===========================================

# Timezone for all containers
TZ=America/New_York

# User and Group IDs (run 'id' command to get yours)
PUID=1000
PGID=1000

# ===========================================
# STORAGE PATHS
# ===========================================

# Storage path for all services
STORAGE_PATH=/opt/surge

# Base directory for all data
DATA_ROOT=/opt/surge

# Media directories
MOVIES_DIR=${DATA_ROOT}/media/movies
TV_SHOWS_DIR=${DATA_ROOT}/media/tv
MUSIC_DIR=${DATA_ROOT}/media/music

# Configuration directories  
CONFIG_ROOT=${DATA_ROOT}/config
LOGS_ROOT=${DATA_ROOT}/logs

# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Homepage Dashboard
HOMEPAGE_PORT=3000

# Media Server Ports
PLEX_PORT=32400
EMBY_PORT=8096
JELLYFIN_PORT=8096

# Automation Tools
RADARR_PORT=7878
SONARR_PORT=8989
BAZARR_PORT=6767
PROWLARR_PORT=9696

# Media Management Tools
CINESYNC_PORT=8082
CINESYNC_DEV_PORT=5173

# ===========================================
# CINESYNC CONFIGURATION
# ===========================================

# Directory Paths
CINESYNC_SOURCE_DIR=${DATA_ROOT}/downloads
CINESYNC_DESTINATION_DIR=${DATA_ROOT}/media
CINESYNC_USE_SOURCE_STRUCTURE=false

# Media Organization Configuration
CINESYNC_LAYOUT=true
CINESYNC_ANIME_SEPARATION=true
CINESYNC_4K_SEPARATION=true
CINESYNC_KIDS_SEPARATION=false

# Custom folder paths for media organization
CINESYNC_CUSTOM_SHOW_FOLDER=Shows
CINESYNC_CUSTOM_4KSHOW_FOLDER=4KShows
CINESYNC_CUSTOM_ANIME_SHOW_FOLDER=AnimeShows
CINESYNC_CUSTOM_MOVIE_FOLDER=Movies
CINESYNC_CUSTOM_4KMOVIE_FOLDER=4KMovies
CINESYNC_CUSTOM_ANIME_MOVIE_FOLDER=AnimeMovies
CINESYNC_CUSTOM_KIDS_MOVIE_FOLDER=KidsMovies
CINESYNC_CUSTOM_KIDS_SHOW_FOLDER=KidsShows

# Resolution-Based Organization
CINESYNC_SHOW_RESOLUTION_STRUCTURE=false
CINESYNC_MOVIE_RESOLUTION_STRUCTURE=false

# Logging Configuration
CINESYNC_LOG_LEVEL=INFO

# Rclone Mount Configuration
CINESYNC_RCLONE_MOUNT=false
CINESYNC_MOUNT_CHECK_INTERVAL=30

# TMDb/IMDB Configuration
CINESYNC_TMDB_API_KEY=${TMDB_API_KEY:-}
CINESYNC_LANGUAGE=English
CINESYNC_ANIME_SCAN=false
CINESYNC_TMDB_FOLDER_ID=false
CINESYNC_IMDB_FOLDER_ID=false
CINESYNC_TVDB_FOLDER_ID=false
CINESYNC_RENAME_ENABLED=false
CINESYNC_MEDIAINFO_PARSER=false
CINESYNC_RENAME_TAGS=Resolution

# Movie Collection Settings
CINESYNC_MOVIE_COLLECTION_ENABLED=false

# System Configuration
CINESYNC_RELATIVE_SYMLINK=false
CINESYNC_MAX_CORES=1
CINESYNC_MAX_PROCESSES=15

# File Handling Configuration
CINESYNC_SKIP_EXTRAS_FOLDER=true
CINESYNC_JUNK_MAX_SIZE_MB=5
CINESYNC_ALLOWED_EXTENSIONS=.mp4,.mkv,.srt,.avi,.mov,.divx,.strm
CINESYNC_SKIP_ADULT_PATTERNS=true

# Real-Time Monitoring Configuration
CINESYNC_SLEEP_TIME=60
CINESYNC_SYMLINK_CLEANUP_INTERVAL=600

# Plex Integration Configuration
CINESYNC_ENABLE_PLEX_UPDATE=false
CINESYNC_PLEX_URL=http://localhost:32400
CINESYNC_PLEX_TOKEN=

# CineSync Server Configuration
CINESYNC_IP=0.0.0.0
CINESYNC_API_PORT=8082
CINESYNC_UI_PORT=5173
CINESYNC_AUTH_ENABLED=true
CINESYNC_USERNAME=admin
CINESYNC_PASSWORD=admin

# MediaHub Service Configuration
CINESYNC_MEDIAHUB_AUTO_START=true
CINESYNC_RTM_AUTO_START=false
CINESYNC_FILE_OPERATIONS_AUTO_MODE=true

# Database Configuration
CINESYNC_DB_THROTTLE_RATE=100
CINESYNC_DB_MAX_RETRIES=10
CINESYNC_DB_RETRY_DELAY=1.0
CINESYNC_DB_BATCH_SIZE=1000
CINESYNC_DB_MAX_WORKERS=20


# ===========================================
# MEDIA SERVER SELECTION
# ===========================================

# Choose your media server: plex, emby, or jellyfin
MEDIA_SERVER=plex

# ===========================================
# DOWNLOAD CLIENT CONFIGURATION
# ===========================================

# NZBGet Configuration
NZBGET_USER=admin
NZBGET_PASS=tegbzn6789

# Real-Debrid Configuration (if using RDT-Client)
RD_API_TOKEN=
RD_USERNAME=

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# TMDB API Key (for metadata)
TMDB_API_KEY=

# Trakt API (for list management)
TRAKT_CLIENT_ID=
TRAKT_CLIENT_SECRET=

# Debrid Service API Keys
RD_API_TOKEN=
AD_API_TOKEN=
PREMIUMIZE_API_TOKEN=

# Poster Enhancement APIs
FANART_API_KEY=
TVDB_API_KEY=

# ===========================================
# SECURITY
# ===========================================

# Set strong passwords for services that support them
ADMIN_PASSWORD=ChangeThisPassword!

# ===========================================
# AUTOMATION & SCHEDULING
# ===========================================

# Watchtower update settings
WATCHTOWER_INTERVAL=86400          # Update check interval (24 hours)
WATCHTOWER_WEBHOOK=                # Optional webhook for notifications

# Scheduler settings
ASSET_PROCESSING_SCHEDULE=0 2 * * * # Daily at 2 AM (cron format)
ENABLE_AUTO_UPDATES=true
ENABLE_SCHEDULER=true

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Docker network name
NETWORK_NAME=surge-network

# Restart policy for containers
RESTART_POLICY=unless-stopped

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable/disable specific services (true/false)
ENABLE_OVERSEERR=true
ENABLE_BAZARR=true
ENABLE_PROWLARR=true
ENABLE_NZBGET=true
ENABLE_RDT_CLIENT=false
ENABLE_CLI_DEBRID=false
ENABLE_DECYPHARR=false
ENABLE_RDT_CLIENT=false
ENABLE_KOMETA=true
ENABLE_POSTERIZARR=true
ENABLE_TAUTULLI=true
ENABLE_HOMEPAGE=true
ENABLE_WATCHTOWER=true
ENABLE_SCHEDULER=true
